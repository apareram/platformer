{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar Juego (SDL3)",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-g",
                
                //Dónde buscar .h
                "-I/opt/homebrew/include",
                "-I${workspaceFolder}/src",

                // Qué compilar
                "${workspaceFolder}/src/engine/*.cpp",
                "${workspaceFolder}/src/main.cpp", 

                "-o",
                "${workspaceFolder}/bin/game_executable",

                // 3. LIBRERÍAS
                "-L/opt/homebrew/lib",
                "-lSDL3",
                "-lSDL3_image",
                "-rpath",
                "/opt/homebrew/lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilador clang++ configurado para SDL3"
        }
    ]
}