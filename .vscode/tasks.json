{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar Juego (SDL3)",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-g",
                
                // 1. INCLUIR (Dónde están los .h)
                "-I/opt/homebrew/include",

                // Esto compila Core.cpp, InputManager.cpp, Renderer.cpp, etc.
                "${workspaceFolder}/src/engine/*.cpp",

                "-o",
                "${workspaceFolder}/game_executable",

                // 3. LINKEAR (Dónde está la librería compilada)
                "-L/opt/homebrew/lib",
                "-lSDL3",
                "-rpath",
                "/opt/homebrew/lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilador clang++ configurado para SDL3"
        }
    ]
}